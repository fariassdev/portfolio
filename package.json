{
  "name": "portfolio",
  "version": "0.1.0",
  "homepage": "https://fernandoas.com",
  "description": "Portfolio site for Fernando Arias Santos",
  "repository": "https://github.com/fariassdev/portfolio.git",
  "author": "Fernando Arias Santos",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,spec.ts,spec.tsx,test.ts,test.tsx,d.ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,md,json,mdx}": [
      "prettier --write"
    ]
  }
}
